"paths":{
    "/adicional": {
        "post": {
            "summary": "Cadastrar Adicional",
            "description": "Rota para cadastrar um novo adicional",
            "tags": ["Adicionais"],
            "requestBody": {
                "content": {
                    "application/json":{
                        "schema":{
                          "$ref": "#/components/schemas/Adicional"
                        },
                        "examples": {
                            "Adicional": {
                                "value": {
                                    "name":"feijoada",
                                    "description" : "Arroz, farofa, couve, feijão separado & laranja, carne seca, costela suina, calabresa e paio",
                                    "price": 24,
                                    "veggie": false
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200":{
                    "description": "ok",
                    "content": {
                        "application/json": {
                            "scema": {
                                "type": "object",
                                "intens": {
                                    "$ref": "#/components/schemas/Adicional"
                                }
                            }
                        }
                    }
                },
                "400":{
                    "description": "Bad Request"
                },
                "500":{
                    "description": "Internal Server Error"
                }
            }
        }
    },
    "/adicionais": {
        "get":{
           "description": "Buscar adicionais cadastrados",
           "summary": "Buscar adicionais cadastrados",
           "tags": ["Adicionais"],
           "responses": {
            "404": {
                "description": "Not Found!"
            },
            "200":{
                "description": "ok",
                "content": {
                    "application/json": {
                        "scema": {
                            "type": "object",
                            "intens": {
                                "$ref": "#/components/schemas/Adicional"
                            }
                        }
                    }
                }
            },
            "500":{
                "description": "Internal Server Error"
            }
        }
        
        }
    },
